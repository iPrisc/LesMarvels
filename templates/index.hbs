{{> header}}

<div class="container-fluid m-2 p-5 bg-primary text-center">
    <h1>Les Marvels</h1>
</div>

<div class="container m-2 p-5 bg-primary text-center">
    <h2>Mes comics</h2>

    <div class="row">
        {{#each characters}}
            <div class="col-md-3">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="{{ imageUrl }}" alt="{{ name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ name }}</h5>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

{{> footer}}